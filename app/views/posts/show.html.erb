<% content_for :title do %> <%=@post.title%><% end %>
<%= link_to "Home", posts_path %>
<h2><%= @post.title %></h2>
<% @post.categories.each do |c|%>
	<%= c.category_name %>
<% end -%>
<% if not @post.photo.blank? then %>
	<%= image_tag @post.photo.url(:medium) %><br>
<% end %>
<p><%= @post.content %></p>
<small><%= @post.created_at %></small>
<br>
Authored by: <%=@username%><br>
<div id="upvote-button">
	<%= link_to "upvote",  upvote_path(:id => @post.id), remote: true, id: "upvote_post" %> <%= @post.score%>
</div>
<%= link_to "tweet", "http://twitter.com/home?status=#{@post.title} #{post_url(@post)} " + "via @Valayism"%>
<%= link_to "facebook", "http://www.facebook.com/sharer.php?u=#{post_url(@post)}" %>
