<% content_for :title do %>Home<% end %>
<hr />
<% @categories.each do |c| %>
	<%= link_to c.category_name, post_with_category_path(name: c.category_name) %><br>
<% end %>
<hr />
<% @posts.each do |post| %>
	<h3><%= link_to post.title, post %></h3>
	<%= truncate(post.content, :length => 50, :separator => '') %><br>
	<hr />
<% end %>