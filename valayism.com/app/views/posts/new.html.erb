<h1>New post</h1>

<%= form_tag(posts_path) do%>
	<% @categories.each do |c|%>
		<%= check_box_tag "#{c.id}", "#{c.category_name}"%> <%= c.category_name %><br>
	<% end %>

	<p>
		<%= label_tag :title%> <br />
		<%= text_field_tag :title %>
	</p>
	<p>
		<%= label_tag :content%> <br />
		<%= text_area_tag :content %>
	</p>
	<p>
		<%= file_field_tag :photo %>
	</p>
	<p>
		<%= button_tag "Publish" %> 
	</p>	
<% end %>
